
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BusinessObject.Models.Member

<h1>Login</h1>
<h4 class="text-danger">@ViewBag.Messgae</h4>
<form asp-controller="Home" asp-action="Login">
    <div>
        <label class="mr-4" asp-for="Email">Email: </label>
        <input class="pl-1" asp-for="Email" type="text" name="email" />
    </div>
    <div>
        <label asp-for="Password">Password: </label>
        <input asp-for="Password" type="password" name="password" />
    </div>
    <div class="mt-3">
        <input type="submit" name="submit" value="submit" />
    </div>
</form>
